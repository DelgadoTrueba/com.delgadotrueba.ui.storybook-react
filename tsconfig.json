{
  "compilerOptions": {
    /*Build*/
    "outDir": "./dist",
    "declarationDir": "./dist",
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    /*Emit*/
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    /*Config*/
    "lib": ["es2020", "dom"],
    "importHelpers": true,
    "sourceMap": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    /*Alias*/
    "baseUrl": ".",
    "rootDir": "."
  },
  "include": ["./src/**/*.ts", "src/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "jest.config.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.eslint.json"
    }
  ]
}
